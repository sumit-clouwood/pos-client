{
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },

  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "semi": "error",
    "indent": ["error", 2],
    "quotes": [2, "single", { "avoidEscape": true }]
  }
}
